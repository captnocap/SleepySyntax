{
  "comments": {
    "lineComment": "//"
  },
  "brackets": [
    ["{", "}"],
    ["[", "]"], 
    ["(", ")"]
  ],
  "autoClosingPairs": [
    ["{", "}"],
    ["[", "]"],
    ["(", ")"],
    ["\"", "\""],
    ["'", "'"]
  ],
  "surroundingPairs": [
    ["{", "}"],
    ["[", "]"],
    ["(", ")"],
    ["\"", "\""],
    ["'", "'"]
  ],
  "folding": {
    "markers": {
      "start": "^\\s*{",
      "end": "^\\s*}"
    }
  },
  "wordPattern": "[a-zA-Z0-9_.:]+",
  "indentationRules": {
    "increaseIndentPattern": "^.*[\\{\\[\\(]\\s*$",
    "decreaseIndentPattern": "^\\s*[\\}\\]\\)].*$"
  }
}
