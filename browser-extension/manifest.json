{
  "manifest_version": 3,
  "name": "Sleepy Syntax Generator",
  "version": "1.0.0",
  "description": "Convert web elements to AI-native Sleepy syntax",
  
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "contextMenus",
    "downloads",
    "notifications"
  ],
  
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": ["ai-service.js", "content.js"],
    "css": ["overlay.css"]
  }],
  
  "background": {
    "service_worker": "background.js"
  },
  
  "action": {
    "default_popup": "popup.html",
    "default_title": "Generate Sleepy Syntax"
  },
  
  "browser_specific_settings": {
    "gecko": {
      "id": "sleepy-syntax@example.com",
      "strict_min_version": "109.0"
    }
  }
}